{
  "manifest_version": 3,
  "name": "ae_DeepL",
  "version": "1.1",
  "description": "Open selected text in a DeepL URL and select auto-language.",
  "permissions": ["contextMenus", "scripting", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://www.deepl.com/*"],
  "browser_action": {
    "default_icon": {
      "128": "icon-128.png"
    },
    "default_title": "ae_DeepL"
  },
  "icons": {
    "128": "icon-128.png"
  }
}
